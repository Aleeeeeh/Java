import java.util.Scanner;

public class Main3 {
	public static void main(String args[]) {
		
		Scanner lg = new Scanner(System.in);
		
		int number;
		
		System.out.println("Digite um Número: ");
		number = lg.nextInt();
		
		if(number<0) {
			System.out.println("Número Negativo!");
		}else
			{
			System.out.println("Número Positivo!");
			}
		
		lg.close();
		
	}
}
