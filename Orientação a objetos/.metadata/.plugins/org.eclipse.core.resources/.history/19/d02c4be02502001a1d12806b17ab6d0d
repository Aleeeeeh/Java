package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Alunos;

public class program4 {
	public static void main(String args[]) {
		Locale.setDefault(Locale.US);
		
		Scanner sc = new Scanner(System.in);
		
		Alunos alu =  new Alunos();
		
		System.out.println("Digite nome do Aluno:");
		alu.nome  = sc.nextLine();
		
		System.out.println("Digite as Notas do Aluno:");
		alu.nota1 = sc.nextDouble();
		alu.nota2 = sc.nextDouble();
		alu.nota3 = sc.nextDouble();
		
		System.out.println("Média final do aluno :" + alu.mediaFinal());
		
		if(alu.mediaFinal() < 60.0) {
			System.out.println("Reprovado");
			System.out.println("Pontos necessários para passar: " + alu.calMedia());
		}else {
			System.out.println("Aprovado !");
		}
		
	}
}
